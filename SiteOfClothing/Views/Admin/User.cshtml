@model IEnumerable<SiteOfShoes.Entities.Accounting.User>
@{
    Layout = "_AdminLayout";
}

<div class="container">
    <a class="badge badge-primary" href="@Url.Action("AddUser")">Добавить пользователя</a>
    <h2>Список пользователей:</h2>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Имя</th>
                <th>Email</th>
                <th>Пароль</th>
                <th>Роль</th>
            </tr>
        </thead>
        <tbody>
            @foreach (SiteOfShoes.Entities.Accounting.User user in Model)
            {
                <tr>
                    <th scope="row">@user.ID</th>
                    <td>@user.Name</td>
                    <td>@user.Email</td>
                    <td>@user.Password</td>
                    <td>@user.Role.Name</td>
                    <td>
                        @Html.ActionLink("Изменить", "EditUser", new { id = user.ID }) |
                        @Html.ActionLink("Удалить", "DeleteUser", new { id = user.ID })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>