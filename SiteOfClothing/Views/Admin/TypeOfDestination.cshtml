@model IEnumerable<SiteOfShoes.Entities.ProductTypes.Shoes.TypeOfDestination>
@{
    Layout = "_AdminLayout";
}

<a class="badge badge-primary" href="@Url.Action("AddTypeOfDestination")">Добавить тип назначения</a>

<h2>Список типов назначения:</h2>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Название</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var type in Model){
            <tr>
                <th scope="row">@type.Id</th>
                <td>@type.Name</td>
                <td>
                    @Html.ActionLink("Изменить", "EditTypeOfDestination", new { id=type.Id }) |
                    @Html.ActionLink("Удалить", "DeleteTypeOfDestination", new { id=type.Id }) 
                </td>
            </tr>
        }
    </tbody>
</table>